{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "lib",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./index.d.ts"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
	},
	"exclude": [
		"tests",
		"dist"
	]
}
